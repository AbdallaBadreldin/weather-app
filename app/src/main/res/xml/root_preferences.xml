    <PreferenceCategory app:title="@string/language">
        <ListPreference
            app:defaultValue="@string/pref_en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="@string/preference_language"
            app:title="@string/choose_application_language"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory app:title="@string/format">
        <ListPreference
            app:defaultValue="@string/pref_celsius"
            app:entries="@array/temperature_entries"
            app:entryValues="@array/temperature_values"
            app:key="@string/preference_temperature"
            app:title="@string/choose_temperature"
            app:useSimpleSummaryProvider="true" />



        <ListPreference
            app:defaultValue="@string/wind_speed"
            app:entries="@array/wind_entries"
            app:entryValues="@array/wind_values"
            app:key="@string/preference_windSpeed"
            app:title="@string/choose_wind_speed"
            app:useSimpleSummaryProvider="true" />

        <!--===============================================================-->


    </PreferenceCategory>


    <PreferenceCategory app:title="@string/notification">
        <SwitchPreference
            android:key="@string/preference_notification"

            android:title="@string/notification"
            app:defaultValue="@string/pref_notification_enabled">

        </SwitchPreference>

    </PreferenceCategory>


